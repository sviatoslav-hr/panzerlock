{
    "name": "panzerlock",
    "private": true,
    "version": "0.4.1",
    "homepage": "https://sviatoslav-hr.github.io/panzerlock/",
    "type": "module",
    "scripts": {
        "dev": "vite --config .config/vite.config.js",
        "build": "tsc && vite build --config .config/vite.config.js",
        "build:prod": "tsc && vite build --config .config/vite.config.js --base /panzerlock/",
        "lint": "tsc --noEmit",
        "lint:watch": "tsc --noEmit --watch",
        "test": "vitest --config .config/vitest.config.js --run --typecheck",
        "test:json": "vitest --config .config/vitest.config.js --run --reporter=json",
        "test:watch": "vitest --config .config/vitest.config.js --watch",
        "gen:assets": "node .scripts/gen-assets.cjs"
    },
    "devDependencies": {
        "ts-node": "^10.9.2",
        "typescript": "^5.8.2",
        "vite": "^6.2.0",
        "vitest": "^3.0.7"
    },
    "pnpm": {
        "onlyBuiltDependencies": [
            "esbuild"
        ]
    }
}
